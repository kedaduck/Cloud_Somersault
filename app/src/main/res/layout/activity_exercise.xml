<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainFunctionView.ExeciseView.Exercise">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/have_exercise_days"
        android:textColor="@color/exercise_title"
        android:textSize="30sp"
        android:gravity="bottom|center_horizontal"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/have_exercise_days_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="50dp"
            android:textColor="@color/dark"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_day"
            android:layout_toRightOf="@id/have_exercise_days_text"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/dark"
            android:textSize="20sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/start_exercise_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/exer_star_button"
            android:layout_centerInParent="true"
            android:textSize="35sp"
            android:text="@string/exercise_star"
            android:textColor="@color/white"/>

    </RelativeLayout>



</LinearLayout>